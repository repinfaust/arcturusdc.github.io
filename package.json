{
  "name": "arcturusdc-site",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "dashboard:test": "node scripts/run-jest-tests.js"
  },
  "dependencies": {
    "firebase": "^10.12.0",
    "firebase-admin": "^13.5.0",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "jest-util": "^29.7.0",
    "exit": "^0.1.2",
    "next": "14.2.5",
    "nodemailer": "^6.10.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.4.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "autoprefixer": "10.4.16",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "postcss": "8.4.35",
    "tailwindcss": "3.4.7"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/__tests__"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/.next",
      "<rootDir>/node_modules",
      "<rootDir>/test-progress",
      "<rootDir>/test-reports"
    ],
    "reporters": [
      "default",
      "<rootDir>/__tests__/utils/ProgressReporter.js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "<rootDir>/tsconfig.json"
        }
      ]
    }
  },
  "engines": {
    "node": ">=18 <=20"
  }
}
